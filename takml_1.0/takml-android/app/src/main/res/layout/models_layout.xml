<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAK-ML Models"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white" />

    <Button
        android:id="@+id/backButton"
        style="@style/darkButton"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="Back" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/modelsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available Models"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/refreshModelsButton"
        style="@style/darkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="Refresh Models" />

    <ListView
        android:id="@+id/modelsListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="10sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/pullModelsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pull Model From Server"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/modelValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:popupBackground="@color/darker_gray"
        android:spinnerMode="dropdown"/>

    <Button
        android:id="@+id/pullModelButton"
        style="@style/darkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="Pull Model" />

</LinearLayout>
